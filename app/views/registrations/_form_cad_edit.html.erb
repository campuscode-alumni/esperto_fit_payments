<section class="page-section cta">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
            <h2 class="section-heading mb-4">
              <span class="section-heading-upper ">MÃ©todo de Pagamento</span>
            </h2>
                <%= form_for @registration do |f| %>
                <div class="form-group">
                  <div  style="padding-top: 10px">
                    <%= f.label :name, 'Nome' %>
                  </div>
                  <div>
                    <%= f.text_field :name %>
                  </div>
                  <div  style="padding-top: 10px">
                    <%= f.label :cpf, 'CPF' %>
                  </div>
                  <div>
                      <%= f.text_field :cpf %>
                  </div>
                  <div  style="padding-top: 10px">
                    <%= f.label :unity_id, 'Unidade' %>
                  </div>
                  <div>
                    <%= f.collection_select(:unity_id, @unities, :id, :name) %>
                  </div>
                  <div  style="padding-top: 10px">
                    <%= f.label :plan_id, 'Plano' %>
                  </div>
                  <div>
                    <%= f.collection_select(:plan_id, @plans, :id, :name) %>
                  </div>
                  <div  style="padding-top: 10px">
                    <%= f.label :pay_method_id, 'Metodo de pagamento' %>
                  </div>
                  <div>
                    <%= f.collection_select(:pay_method_id, @pay_methods, :id, :name) %>
                  </div>
                  <div style="padding-top: 20px">
                    <%= f.submit "Enviar", class: "btn btn-primary btn-xl2"  %>
                  </div>
                </div>
              <%end%>

              <% if @registration.errors.any? %>
                <%  @registration.errors.full_messages.each do |msg| %>
                  <div style="padding-top: 20px">
                    <%= msg %>
                  </div>
                <%end %>
              <%end %>
          </div>
          <p class="mb-0"></p>
        </div>
      </div>
    </div>
  </div>
</section>
