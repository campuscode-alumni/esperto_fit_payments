<div class="container">
  <div class="row">
    <div class="col-xl-9 mx-auto">
      <div class="cta-inner text-center rounded">
        <h2 class="section-heading mb-4">
          <span class="section-heading-upper">Matr√≠culas</span>
        </h2>
          <%= form_tag(search_single_class_registrations_path, method: "get") do %>
        <h2>"Lancar aula avulsa para aluno"</h2>
          <%= label_tag(:q, "Pesquisar aluno") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Buscar") %>
        <% end %>

        <table>
          <thead>
            <th>Nome</th>
            <th>CPF</th>
          </thead>
        <% @registrations.each do |registration| %>
          <tr>
            <td><%=registration.name %></td>
            <td><%=registration.cpf%></td>
            <td><%= link_to 'Mostrar', registration_path(registration)%></td>
            <td><%= link_to 'Editar', edit_registration_path(registration)%></td>
          </tr>
        <% end %>
        </table>
        </div>
      </div>
    </div>
  </div>
