<div class="row">
      <div class="col-xl-9 mx-auto">
            <h2 class="section-heading mb-4">
              <span class="section-heading-upper ">MÃ©todo de Pagamento</span>
            </h2>
                <%=form_for @pay_method do |f| %>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <div  style="padding-top: 10px">
                    <%= f.label :name %>
                  </div>
                  <div>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                  <div  style="padding-top: 10px">
                    <%= f.label :tax %>
                  </div>
                  <div>
                    <%= f.text_field :tax, class: "form-control" %>
                  </div>
                  <div  style="padding-top: 10px">
                    <%= f.label :limit_days %>
                  </div>
                  <div>
                    <%= f.text_field :limit_days, class: "form-control" %>
                  </div>
                  <div style="padding-top: 20px">
                    <%= f.submit "Enviar", class: "btn btn-primary btn-xl2"  %>
                  </div>
                </div>
              <%end%>
          </div>
            <div class="form-group col-md-6">
              <% image_tag ("logo_espertofit_CompactWhite.png")%>
            </div>
          <p class="mb-0"></p>
        </div>
      </div>

<% if @pay_method.errors.any? %>
  <%  @pay_method.errors.full_messages.each do |msg| %>
      <%= msg %>
  <%end %>
<%end %>
